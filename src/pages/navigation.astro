---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Navigation Controls">
  <div class="h-full flex flex-col items-center justify-center bg-blue-900 bg-opacity-50">
    <h2 class="text-4xl font-bold mb-4 text-glow">Navigation Controls</h2>
    <p class="text-xl mb-8">Plotting course through the galaxy</p>
    <div class="flex justify-center space-x-4">
      <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105">
        Set Course
      </button>
      <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105">
        Engage Warp Drive
      </button>
    </div>
  </div>
</Layout>