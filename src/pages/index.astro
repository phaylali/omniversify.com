---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Starship Command Center">
  <div slot="home" class="h-full flex flex-col items-center justify-center bg-space bg-opacity-50">
    <h1 class="text-5xl font-bold mb-4 text-glow">Welcome to Omniversify</h1>
    <p class="text-xl mb-8">Scroll to navigate through different systems</p>
    <div class="animate-pulse">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>

  <div slot="navigation" class="h-full flex flex-col items-center justify-center bg-blue-900 bg-opacity-50">
    <h2 class="text-4xl font-bold mb-4 text-glow">Navigation Controls</h2>
    <p class="text-xl mb-8">Plotting course through the galaxy</p>
    <div class="flex justify-center space-x-4">
      <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105">
        Set Course
      </button>
      <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105">
        Engage Warp Drive
      </button>
    </div>
  </div>

  <div slot="life-support" class="h-full flex flex-col items-center justify-center bg-green-900 bg-opacity-50">
    <h2 class="text-4xl font-bold mb-4 text-glow">Life Support Systems</h2>
    <p class="text-xl mb-8">Maintaining optimal conditions for the crew</p>
    <div class="grid grid-cols-2 gap-4">
      <div class="bg-green-800 p-4 rounded-lg">
        <h3 class="text-2xl font-semibold mb-2">Oxygen Levels</h3>
        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
          <div class="bg-green-600 h-2.5 rounded-full" style="width: 95%"></div>
        </div>
      </div>
      <div class="bg-green-800 p-4 rounded-lg">
        <h3 class="text-2xl font-semibold mb-2">Temperature</h3>
        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
          <div class="bg-yellow-400 h-2.5 rounded-full" style="width: 75%"></div>
        </div>
      </div>
    </div>
  </div>

  <div slot="engine-room" class="h-full flex flex-col items-center justify-center bg-red-900 bg-opacity-50">
    <h2 class="text-4xl font-bold mb-4 text-glow">Engine Room</h2>
    <p class="text-xl mb-8">Monitoring warp core stability</p>
    <div class="flex justify-center">
      <div class="w-64 h-64 rounded-full border-4 border-red-500 flex items-center justify-center animate-pulse">
        <div class="text-3xl font-bold">Warp Core</div>
      </div>
    </div>
  </div>

  <div slot="communication" class="h-full flex flex-col items-center justify-center bg-yellow-900 bg-opacity-50">
    <h2 class="text-4xl font-bold mb-4 text-glow">Communication Center</h2>
    <p class="text-xl mb-8">Incoming transmissions</p>
    <div class="space-y-4">
      <div class="bg-yellow-800 p-4 rounded-lg flex items-center space-x-4">
        <div class="w-3 h-3 bg-green-500 rounded-full animate-ping"></div>
        <span>Incoming message from Starfleet Command</span>
      </div>
      <div class="bg-yellow-800 p-4 rounded-lg flex items-center space-x-4">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <span>Distress signal detected</span>
      </div>
    </div>
  </div>
</Layout>