---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Life Support Systems">
  <div class="h-full flex flex-col items-center justify-center bg-green-900 bg-opacity-50">
    <h2 class="text-4xl font-bold mb-4 text-glow">Life Support Systems</h2>
    <p class="text-xl mb-8">Maintaining optimal conditions for the crew</p>
    <div class="grid grid-cols-2 gap-4">
      <div class="bg-green-800 p-4 rounded-lg">
        <h3 class="text-2xl font-semibold mb-2">Oxygen Levels</h3>
        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
          <div class="bg-green-600 h-2.5 rounded-full" style="width: 95%"></div>
        </div>
      </div>
      <div class="bg-green-800 p-4 rounded-lg">
        <h3 class="text-2xl font-semibold mb-2">Temperature</h3>
        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
          <div class="bg-yellow-400 h-2.5 rounded-full" style="width: 75%"></div>
        </div>
      </div>
    </div>
  </div>
</Layout>