---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Communication Center">
  <div class="h-full flex flex-col items-center justify-center bg-yellow-900 bg-opacity-50">
    <h2 class="text-4xl font-bold mb-4 text-glow">Communication Center</h2>
    <p class="text-xl mb-8">Incoming transmissions</p>
    <div class="space-y-4">
      <div class="bg-yellow-800 p-4 rounded-lg flex items-center space-x-4">
        <div class="w-3 h-3 bg-green-500 rounded-full animate-ping"></div>
        <span>Incoming message from Starfleet Command</span>
      </div>
      <div class="bg-yellow-800 p-4 rounded-lg flex items-center space-x-4">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <span>Distress signal detected</span>
      </div>
    </div>
  </div>
</Layout>